generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id             String    @id @default(uuid())
  firstName      String
  lastName       String
  email          String    @unique
  hashedPassword Bytes
  wishlist       Wishlist?
}

model Product {
  id        String     @id @default(uuid())
  name      String
  wishlists Wishlist[]
}

model Wishlist {
  id       String    @id @default(uuid())
  products Product[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String
}
